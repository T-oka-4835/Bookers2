<h2>Follower Users</h2>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to (user) do %>
          <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", class: "no-image" %></td>
          <% end %>
        <td><%= link_to user.name %></td>
    <% end %>    
  </tbody>
</table>