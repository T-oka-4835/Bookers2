<div class="container">
  <div class="row">

<div class="col-xs-3">
<%= render 'users/user', user: @user %>
</div>

<div class="col-xs-9">

<h1>Users</h1>

  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <td><%= attachment_image_tag @user, :profile_image, :fill, 30, 30, format: 'jpeg', fallback: "no_image.jpg" %></td>
        <td><%= @user.name %></td>
        <td><%= link_to "Show", user_path(@user) %></td>
      </tr>

    </tbody>
  </table>

    </div>
  </div>
</div>
