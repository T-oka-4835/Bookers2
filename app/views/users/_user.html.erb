<h2>User info</h2>

<p>
  <%= notice %>
</p>

<%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>

<table class="table">

  <tbody>
    <tr></tr>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>

    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>

    <!--フォロー機能-->
    <tr>
    <td>follows:</td>
    <td><%= link_to "#{user.followings.count}" %></td>
    </tr>
    <tr>
    <td>followers:</td>
    <td><%= "#{user.followers.count}" %></td>
    </tr>
    <!--フォロー機能-->
  </tbody>
</table>
  
  <!--フォローボタン実装-->
  <% unless user == current_user %>
  <% if current_user.followings?(user) %>
    <td><div class="btn btn-info col-xs-10 col-xs-offset-1 sign_in">
      <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete %>
      </div></td>
    <% else %>
    <td><div class="btn btn-success col-xs-10 col-xs-offset-1 sign_up">
      <%= link_to "フォローする", user_relationships_path(user.id),method: :post %>
    </div></td>
    <% end %>
    <% else %>
   <%= link_to edit_user_path(user.id), class: 'btn btn-default col-xs-12' do %>
    <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
    <% end %>
    <% end %>
    

<h4 class="new-book">New book</h4>
<%= form_with model:book, local:true do |f| %>
<% if f.object.errors.any? %>
<%= render 'layouts/error', model: f.object %>
 <% end %>
<div>
  <div class="book_title">Title</div>
  <%= f.text_field :title, class: "col-xs-12" %>
</div>

<div>
  <div class="book_opinion">Opinion</div>
  <%= f.text_area :body, class: "col-xs-12" %>
</div>

<div class="btn btn-primary col-xs-12">
<%= f.submit 'Create Book' %>
</div>

<% end %>

