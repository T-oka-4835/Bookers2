<div class="container">


<h1>User info</h1>

<%= form_with model:@user, url:"/users/#{@user.id}", local: true do |f| %>

<h4>Name</h4>
<%= f.text_field :name %>

<h4>Image</h4>
<%= f.attachment_field :profile_image %>

<h4>Introduction</h4>
<%= f.text_area :introduction %> <br>
<%= f.submit 'Update User' %>

<% end %>
</div>

