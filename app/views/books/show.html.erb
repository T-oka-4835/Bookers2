<div class="container">
  <div class="row">

  <div class="col-xs-3">
    <%= render 'users/user', user: @user, book: @book %>
  </div>

  <div class="col-xs-9">

　<h4>Book detail</h4>

  <table class="table table-hover table-inverse">
    <tbody>
     <tr>
    <td><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", class: "no-image" %><br>
    <%= link_to @user.name,user_path(current_user) %>
    </td>
    <td><%= @book.title %></td>
    <td><%= @book.body %></td>

    <!--修正必要-->
    <% if @user.id == current_user.id %>
    <td><%= link_to "Edit", edit_book_path(@book.id)%></td>
    <td><%= link_to "Destroy", book_path(@book), method: :delete, "date-confirm" => "本当に消しますか？" %></td>
    </tr>
    <% end %>
    </tbody>
    </table>

   </div>
  </div>
</div>

<footer>
  <div class="container">
    <div class="row">
      <div class="col-xs-3 col-xs-offset-9">
        <p>
          CopyRight Infratop.inc
        </p>
      </div>
    </div>
  </div>
</footer>
