<div class="container">
  <div class="row">

  <div class="col-xs-3">
    <%= render 'users/user', user: @user, book: @book %>
  </div>

  <div class="col-xs-9">

　<h4>Book detail</h4>

  <table class="table table-hover table-inverse">
    <tbody>
     <tr>
    <td><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", class: "no-image" %><br>
    <%= link_to @user.name,user_path(current_user) %>
    </td>
    <td><%= link_to @book.title, book_path(@book)  %></td>
    <td><%= @book.body %></td>

    <% if @book.user == @user %>
    <td><%= link_to "Edit", edit_book_path(@book.id)%></td>
    <td><%= link_to "Destroy", book_path(@book), method: :delete, "date-confirm" => "本当に消しますか？" %></td>
    </tr>
    <% end %>

    <!--いいね機能-->
     <% if @book.favorited_by?(current_user) %>
        <td>
          <%= link_to book_favorites_path(@book), method: :delete do %>
          <i class="fa fa-heart" aria-hiddent="true" style="color: red;"></i>
          <%= @book.favorites.count %>
          <% end %>
        </td>
        <% else %>
        <td>
          <%= link_to book_favorites_path(@book), method: :book do %>
          <i class="fa fa-heart-o" aria-hidden="true" tyle="color: red;"></i>
          <%= @book.favorites.count %>
          <% end %>
        </td>
        <% end %>
      <!--いいね機能-->

      <!--コメント機能-->
        <!--<i class="fa fa-comment"></i>-->
        <!--<a href="#comments"><= @book.post_comments.count %></a>-->

      <div class="comment-list bt style-2" id="comments">
        <div class="float-wrapper">
        <td class="comment-count">コメント数：<%= @book.post_comments.count %></td>
      </div>


      <%= form_with(model:[@book, @post_comment], local: true) do |f| %>
      <div class="row">
        <div class="col-sm-12">
          <%= f.text_area :comment, rows:'5', class: "form-control"%>
        </div>
      </div>
      <%= f.submit "送信", class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
      <% end %>


　　　<!--コメント機能-->


    </tbody>
    </table>

   </div>
  </div>
</div>

<footer>
  <div class="container">
    <div class="row">
      <div class="col-xs-3 col-xs-offset-9">
        <p>
          CopyRight Infratop.inc
        </p>
      </div>
    </div>
  </div>
</footer>
