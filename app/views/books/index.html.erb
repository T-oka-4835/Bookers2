<div class="container">
  <div class="row">

  <div class="col-xs-3">
    <%= render 'users/user', user: @user, book: @book %>
  </div>

  <div class="col-xs-9">

<h4>Books</h4>

<table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th colspan="1"></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= link_to (book.user) do %>
          <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", class: "no-image" %></td>
          <% end %>
        <td><%= link_to book.title, book_path(book) %></td>
        <td><%= book.body %></td>
      </tr>
     <% end %>

    
    </tbody>
  </table>

  </div>
 </div>
</div>

<footer>
  <div class="container">
    <div class="row">
      <div class="col-xs-3 col-xs-offset-9">
        <p>
          CopyRight Infratop.inc
        </p>
      </div>
    </div>
  </div>
</footer>