<% if book.favorited_by?(current_user) %>
  <td>
    <%= link_to book_favorites_path(book), method: :delete, remote: true do %>
    <i class="fa fa-heart" aria-hiddent="true" style="color: red;"></i>
    <%= book.favorites.count %>
    <% end %>
  </td>
  <% else %>
  <td>
    <%= link_to book_favorites_path(book), method: :book, remote: true do %>
    <i class="fa fa-heart-o" aria-hidden="true" tyle="color: red;"></i>
    <%= book.favorites.count %>
    <% end %>
  </td>
<% end %>